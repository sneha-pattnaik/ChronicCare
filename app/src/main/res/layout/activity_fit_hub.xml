<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Header Section -->
        <TextView
            android:id="@+id/fithubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="FitHub"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/fithubDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fithubTitle"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif"
            android:text="Stay fit, Live happier."
            android:textColor="#4c5663"
            android:textSize="18sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_profile"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000" />

        <!-- Action Cards Section (Log Food/Exercise) -->
        <LinearLayout
            android:id="@+id/FithubActions"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/fithubDesc"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif"
            android:orientation="vertical"
            android:padding="1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/logFoodCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f7f7f7"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/foodImg"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_food" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/foodImg"
                            android:text="Log Food"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/logExerciseCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f7f7f7"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/gymImg"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_gym" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/gymImg"
                            android:text="Log Exercise"
                            android:textSize="15sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/MealPlanText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Today's Meal Plan"
            android:layout_marginTop="8dp"
            android:layout_below="@id/FithubActions"
            android:textSize="28sp" />

        <!-- Meal Cards Section -->
        <HorizontalScrollView
            android:id="@+id/meal_cards_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MealPlanText"
            android:layout_marginTop="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Breakfast Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/meal_image_1"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_food1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Breakfast"
                                android:textSize="14sp"
                                android:textColor="#808080" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Oatmeal with Berries"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textColor="#333333"
                                android:layout_marginBottom="6dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="320 cal"
                                    android:textSize="14sp"
                                    android:textColor="#555555" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:layout_marginEnd="6dp"
                                    android:text="•"
                                    android:textColor="#555555" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="45g carbs"
                                    android:textSize="14sp"
                                    android:textColor="#555555" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Low sugar"
                                    android:textSize="12sp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:paddingTop="4dp"
                                    android:paddingBottom="4dp"
                                    android:background="#F0F0F0"
                                    android:textColor="#555555"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="High fiber"
                                    android:textSize="12sp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:paddingTop="4dp"
                                    android:paddingBottom="4dp"
                                    android:background="#F0F0F0"
                                    android:textColor="#555555" />
                            </LinearLayout>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Swap Meal"
                                android:textColor="@android:color/white"
                                android:backgroundTint="#2E8B57"
                                app:cornerRadius="6dp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Lunch Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_food2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lunch"
                                android:textSize="14sp"
                                android:textColor="#808080" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Grilled Salmon Salad"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textColor="#333333"
                                android:layout_marginBottom="6dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="450 cal"
                                    android:textSize="14sp"
                                    android:textColor="#555555" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:layout_marginEnd="6dp"
                                    android:text="•"
                                    android:textColor="#555555" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20g carbs"
                                    android:textSize="14sp"
                                    android:textColor="#555555" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="High protein"
                                    android:textSize="12sp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:paddingTop="4dp"
                                    android:paddingBottom="4dp"
                                    android:background="#F0F0F0"
                                    android:textColor="#555555"
                                    android:layout_marginEnd="8dp" />
                            </LinearLayout>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Swap Meal"
                                android:textColor="@android:color/white"
                                android:backgroundTint="#2E8B57"
                                app:cornerRadius="6dp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Dinner Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_food3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dinner"
                                android:textSize="14sp"
                                android:textColor="#808080" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Veggie Chicken Wrap"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textColor="#333333"
                                android:layout_marginBottom="6dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="380 cal"
                                    android:textSize="14sp"
                                    android:textColor="#555555" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:layout_marginEnd="6dp"
                                    android:text="•"
                                    android:textColor="#555555" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="35g carbs"
                                    android:textSize="14sp"
                                    android:textColor="#555555" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Easy prep"
                                    android:textSize="12sp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:paddingTop="4dp"
                                    android:paddingBottom="4dp"
                                    android:background="#F0F0F0"
                                    android:textColor="#555555"
                                    android:layout_marginEnd="8dp" />
                            </LinearLayout>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Swap Meal"
                                android:textColor="@android:color/white"
                                android:backgroundTint="#2E8B57"
                                app:cornerRadius="6dp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>


        <!-- Quick Workouts Header -->
        <TextView
            android:id="@+id/quickWorkoutsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Workouts"
            android:layout_marginTop="24dp"
            android:layout_below="@id/meal_cards_scroll"
            android:textSize="22sp"
            android:fontFamily="sans-serif" />

        <!-- Quick Workouts Videos -->
        <HorizontalScrollView
            android:id="@+id/video_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quickWorkoutsText"
            android:layout_marginTop="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <include layout="@layout/item_video_card" android:id="@+id/video1" />
                <include layout="@layout/item_video_card" android:id="@+id/video2" />
                <include layout="@layout/item_video_card" android:id="@+id/video3" />
                <include layout="@layout/item_video_card" android:id="@+id/video4" />
                <include layout="@layout/item_video_card" android:id="@+id/video5" />
                <include layout="@layout/item_video_card" android:id="@+id/video6" />
                <include layout="@layout/item_video_card" android:id="@+id/video7" />
                <include layout="@layout/item_video_card" android:id="@+id/video8" />
                <include layout="@layout/item_video_card" android:id="@+id/video9" />
                <include layout="@layout/item_video_card" android:id="@+id/video10" />

            </LinearLayout>
        </HorizontalScrollView>


        <!-- Articles Header -->
        <TextView
            android:id="@+id/articlesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommended For You"
            android:layout_marginTop="24dp"
            android:layout_below="@id/video_scroll"
            android:textSize="22sp"
            android:fontFamily="sans-serif" />

        <LinearLayout
            android:id="@+id/articlesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/articlesText"
            android:layout_marginTop="8dp" />
    </RelativeLayout>
</ScrollView>
