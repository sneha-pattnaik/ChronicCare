<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Header Section -->
        <TextView
            android:id="@+id/fithubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FitHub"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fithubDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fithubTitle"
            android:layout_marginTop="0dp"
            android:text="Stay fit, Live happier."
            android:textColor="#4c5663"
            android:textSize="18sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_profile"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000" />

        <!-- Action Cards Section (Log Food/Exercise) - Unchanged -->
        <LinearLayout
            android:id="@+id/FithubActions"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/fithubDesc"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="0">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f7f7f7"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/foodImg"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_food" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/foodImg"
                            android:text="Log Food"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f7f7f7"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/gymImg"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_gym" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/gymImg"
                            android:text="Log Exercise"
                            android:textSize="15sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/MealPlanText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Meal Plan"
            android:layout_marginTop="8dp"
            android:layout_below="@id/FithubActions"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Meal Cards Section (Horizontal ScrollView with new detailed card replica) -->
        <HorizontalScrollView
            android:id="@+id/meal_cards_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MealPlanText"
            android:layout_marginTop="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- REPLICA MEAL CARD 1: Breakfast (Oatmeal with Berries) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Image -->
                        <ImageView
                            android:id="@+id/meal_image_1"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_food1" />

                        <!-- Content Area -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <!-- Meal Time -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Breakfast"
                                android:textSize="14sp"
                                android:textColor="#808080" />

                            <!-- Meal Name -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Oatmeal with Berries"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:layout_marginBottom="6dp" />

                            <!-- Nutrition Info -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="320 cal"
                                    android:textSize="14sp"
                                    android:textColor="#555555" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:layout_marginEnd="6dp"
                                    android:text="•"
                                    android:textColor="#555555" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="45g carbs"
                                    android:textSize="14sp"
                                    android:textColor="#555555" />
                            </LinearLayout>

                            <!-- Tags -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Low sugar"
                                    android:textSize="12sp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:paddingTop="4dp"
                                    android:paddingBottom="4dp"
                                    android:background="#F0F0F0"
                                    android:textColor="#555555"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="High fiber"
                                    android:textSize="12sp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:paddingTop="4dp"
                                    android:paddingBottom="4dp"
                                    android:background="#F0F0F0"
                                    android:textColor="#555555" />
                            </LinearLayout>

                            <!-- Button -->
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Swap Meal"
                                android:textColor="@android:color/white"
                                android:backgroundTint="#2E8B57"
                                app:cornerRadius="6dp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- REPLICA MEAL CARD 2: Lunch -->
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_food2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lunch"
                                android:textSize="14sp"
                                android:textColor="#808080" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Grilled Salmon Salad"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:layout_marginBottom="6dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="450 cal"
                                    android:textSize="14sp"
                                    android:textColor="#555555" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:layout_marginEnd="6dp"
                                    android:text="•"
                                    android:textColor="#555555" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20g carbs"
                                    android:textSize="14sp"
                                    android:textColor="#555555" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="High protein"
                                    android:textSize="12sp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:paddingTop="4dp"
                                    android:paddingBottom="4dp"
                                    android:background="#F0F0F0"
                                    android:textColor="#555555"
                                    android:layout_marginEnd="8dp" />
                            </LinearLayout>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Swap Meal"
                                android:textColor="@android:color/white"
                                android:backgroundTint="#2E8B57"
                                app:cornerRadius="6dp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- REPLICA MEAL CARD 3: Dinner -->
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_food3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dinner"
                                android:textSize="14sp"
                                android:textColor="#808080" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Veggie Chicken Wrap"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:layout_marginBottom="6dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="380 cal"
                                    android:textSize="14sp"
                                    android:textColor="#555555" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:layout_marginEnd="6dp"
                                    android:text="•"
                                    android:textColor="#555555" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="35g carbs"
                                    android:textSize="14sp"
                                    android:textColor="#555555" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Easy prep"
                                    android:textSize="12sp"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:paddingTop="4dp"
                                    android:paddingBottom="4dp"
                                    android:background="#F0F0F0"
                                    android:textColor="#555555"
                                    android:layout_marginEnd="8dp" />
                            </LinearLayout>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Swap Meal"
                                android:textColor="@android:color/white"
                                android:backgroundTint="#2E8B57"
                                app:cornerRadius="6dp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>


        <!-- Quick Workouts Header -->
        <TextView
            android:id="@+id/quickWorkoutsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Workouts"
            android:layout_marginTop="24dp"
            android:layout_below="@id/meal_cards_scroll"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Quick Workouts Videos (Horizontal ScrollView) -->
        <HorizontalScrollView
            android:id="@+id/video_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quickWorkoutsText"
            android:layout_marginTop="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <!-- Video Card 1: Gentle Yoga -->
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_exercise"
                            android:contentDescription="Gentle Yoga" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#66000000" /> <!-- Dark overlay -->

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_play_button"
                            android:contentDescription="Play Button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gentle Yoga"
                            android:textColor="@android:color/white"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 mins"
                            android:textColor="@android:color/white"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="4dp"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Video Card 2: Surya Namaskar -->
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_article"
                            android:contentDescription="Surya Namaskar" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#66000000" /> <!-- Dark overlay -->

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_play_button"
                            android:contentDescription="Play Button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Surya Namaskar"
                            android:textColor="@android:color/white"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 mins"
                            android:textColor="@android:color/white"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="4dp"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Video Card 3: Core Strength -->
                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_exercise"
                            android:contentDescription="Core Strength Workout" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#66000000" /> <!-- Dark overlay -->

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_play_button"
                            android:contentDescription="Play Button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Core Strength"
                            android:textColor="@android:color/white"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="20dp"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 mins"
                            android:textColor="@android:color/white"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="4dp"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>


        <!-- Articles Header -->
        <TextView
            android:id="@+id/articlesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read About Diabetes"
            android:layout_marginTop="24dp"
            android:layout_below="@id/video_scroll"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Articles List (Vertical LinearLayout) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/articlesText"
            android:layout_marginTop="8dp">

            <!-- Article Card 1: Healthy Nighttime Food -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_article"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Healthy Food" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Article"
                            android:textSize="12sp"
                            android:textColor="#808080" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Healthy Nighttime Food for people with Diabetes"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="#333333" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 min read"
                            android:textSize="12sp"
                            android:textColor="#555555"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Article Card 2: Top 5 Snacks -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_article"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Healthy Snacks" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Article"
                            android:textSize="12sp"
                            android:textColor="#808080" />

                        <TextView
