<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvReportTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvAnalysisStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Status: Not analyzed"
            android:textSize="14sp"
            android:textColor="#666666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnAnalyzeReport"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Analyze Report"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#26A69A" />

            <Button
                android:id="@+id/btnOpenReport"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Open PDF"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:backgroundTint="#E0E0E0" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Summary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvSummaryPlain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No summary yet."
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Detailed Explanation"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvSummaryDetailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Key Findings"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <LinearLayout
            android:id="@+id/containerFindings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Known"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <LinearLayout
            android:id="@+id/containerKnown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Unclear / Needs Review"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <LinearLayout
            android:id="@+id/containerUnclear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Confidence"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvConfidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sources"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <LinearLayout
            android:id="@+id/containerSources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Doctor Review"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvReviewStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Not requested"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="6dp" />

        <Button
            android:id="@+id/btnRequestReview"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="Request Doctor Review"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3949AB" />

        <Button
            android:id="@+id/btnMarkVerified"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="Mark as Verified"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2E7D32"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
