<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mainPageGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monitor"
                android:textSize="25sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_profile"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF000000" />

            <TextView
                android:id="@+id/mainPageDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mainPageGreeting"
                android:text="Where your numbers tell your story."
                android:textSize="15sp"
                android:textColor="#4c5663" />

            <TextView
                android:id="@+id/txtAddReading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Reading"
                android:textSize="25sp"
                android:layout_below="@id/mainPageDate"
                android:layout_marginTop="30dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/livedata_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtAddReading"
                android:layout_marginTop="30dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#f7f9fa">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Select Reading Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/input_background"
                        android:paddingHorizontal="12dp">

                        <EditText
                            android:id="@+id/etReadingType"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="Select Reading Type"
                            android:focusable="false"
                            android:textColorHint="#9E9E9E"
                            android:textSize="14sp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_dropdown"
                            app:tint="#26A69A"/>
                    </LinearLayout>

                    <!-- Enter Glucose Reading -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/input_background"
                        android:paddingHorizontal="12dp">

                        <EditText
                            android:id="@+id/etGlucoseReading"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:background="@null"
                            android:hint="Enter Glucose Reading (mg/dL)"
                            android:textColorHint="#9E9E9E"
                            android:textSize="14sp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_mic"
                            app:tint="#26A69A"/>
                    </LinearLayout>

                    <!-- Choose Date & Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/input_background"
                        android:paddingHorizontal="12dp">

                        <EditText
                            android:id="@+id/etDateTime"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:focusable="false"
                            android:hint="Choose Date &amp; Time"
                            android:textColorHint="#9E9E9E"
                            android:textSize="14sp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="#26A69A"/>
                    </LinearLayout>

                    <!-- Save Button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSaveReading"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rectangle_button"
                        android:backgroundTint="@null"
                        android:text="Save Reading"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </LinearLayout>
</ScrollView>
